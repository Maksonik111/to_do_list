<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="end"
        android:layout_gravity="center">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageButton5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/person"
            app:srcCompat="@drawable/person" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:orientation="vertical"
        android:layout_marginTop="140sp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="0sp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/archivwb"
                app:srcCompat="@drawable/archivewb" />

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/diary"
                app:srcCompat="@drawable/diary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:contentDescription="@string/plan"
                app:srcCompat="@drawable/plan" />

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="@string/trashcan"
                app:srcCompat="@drawable/trashcan" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>